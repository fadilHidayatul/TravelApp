<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Home.HomeFragment">

    <LinearLayout
        android:orientation="vertical"
        android:weightSum="5"
        android:paddingHorizontal="24dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/l_atas"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/thai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dmsans_bold"
                android:textStyle="bold"
                android:textSize="30sp"
                android:layout_above="@id/tmau"
                android:textColor="@color/black"
                android:text="Hai "/>
            <TextView
                android:id="@+id/home_user"
                android:layout_toEndOf="@id/thai"
                android:layout_above="@id/tmau"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dmsans_bold"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:text="User"/>
            <TextView
                android:id="@+id/tmau"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dmsans_bold"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:layout_alignParentBottom="true"
                android:text="Mau Kemana Hari Ini???"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/l_tengah"
            android:layout_weight="0.8"
            android:paddingTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/pilih_rute"
                android:background="@drawable/ic_input"
                android:paddingHorizontal="18dp"
                android:layout_marginVertical="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/selected_rute_home"
                    android:text="Pilih Rute"
                    android:fontFamily="@font/dmsans_regular"
                    android:textColor="@color/black70"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:src="@drawable/ic_arrow_right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="14dp"
                    android:layout_height="14dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/pilih_mobil"
                android:layout_below="@id/pilih_rute"
                android:background="@drawable/ic_input"
                android:paddingHorizontal="18dp"
                android:layout_marginVertical="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/selected_mobil_home"
                    android:text="Pilih Mobil"
                    android:fontFamily="@font/dmsans_regular"
                    android:textColor="@color/black70"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:src="@drawable/ic_arrow_right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="14dp"
                    android:layout_height="14dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/l_kursi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pilih_mobil"
                android:paddingHorizontal="18dp">
                <TextView
                    android:id="@+id/txt_kursi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/dmsans_regular"
                    android:text="Jumlah Pesanan"
                    android:textColor="@color/black70"
                    android:textSize="16sp" />
                <com.shawnlin.numberpicker.NumberPicker
                    android:id="@+id/jumlah_kursi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/txt_kursi"
                    android:paddingStart="18dp"
                    android:paddingEnd="12dp"
                    app:np_dividerType="underline"
                    app:np_height="60dp"
                    app:np_orientation="horizontal"
                    app:np_selectedTextColor="@color/red"
                    app:np_selectedTextSize="18sp"
                    app:np_textColor="@color/black70"
                    app:np_textSize="14sp"
                    app:np_width="180dp"
                    app:np_wrapSelectorWheel="true" />
            </RelativeLayout>

            <LinearLayout
                android:layout_below="@id/l_kursi"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:weightSum="2"
                android:layout_marginVertical="16dp"
                android:paddingHorizontal="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_tgl"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/dmsans_regular"
                    android:text="Tanggal Pesanan"
                    android:textColor="@color/black70"
                    android:textSize="16sp" />
                <RelativeLayout
                    android:id="@+id/tgl_from"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="18dp"
                    android:paddingHorizontal="8dp"
                    android:paddingBottom="4dp"
                    android:background="@drawable/ic_bg_tgl"
                    android:layout_width="match_parent"
                    android:layout_height="90dp">
                    <TextView
                        android:text="Dari tgl"
                        android:layout_above="@id/txt_tgl_pergi"
                        android:textColor="@color/yellow"
                        android:fontFamily="@font/dmsans_medium"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txt_tgl_pergi"
                        android:text="@string/tgl"
                        android:textColor="@color/white"
                        android:fontFamily="@font/dmsans_bold"
                        android:textSize="16sp"
                        android:layout_marginBottom="4dp"
                        android:layout_alignParentBottom="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/l_bawah"
            android:layout_marginBottom="-5dp"
            android:layout_weight="2.3"
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/btn_pesan"
                android:background="@drawable/ic_button_pesan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Pesan"
                    android:textColor="@color/white"
                    android:fontFamily="@font/dmsans_bold"
                    android:textSize="16sp"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>