<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingTop="6dp"
    tools:context=".Kendaraan.DetailKendaraanActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:paddingHorizontal="24dp"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <ImageView
            android:id="@+id/backActivity"
            android:src="@drawable/ic_arrow_right"
            android:rotation="180"
            android:layout_centerVertical="true"
            android:tint="@color/black"
            android:layout_width="10dp"
            android:layout_height="25dp"/>
        <TextView
            android:text="Detail Kendaraan"
            android:fontFamily="@font/dmsans_bold"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:paddingHorizontal="24dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="12dp"
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <ImageView
                    android:id="@+id/img_detail_kendaraan"
                    android:src="@drawable/detailkendaraan"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/lbulat2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/l1"
                    android:weightSum="2"
                    android:layout_marginVertical="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/linear_kursi"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:src="@drawable/ic_seat"
                            android:layout_width="40dp"
                            android:layout_height="40dp"/>
                        <TextView
                            android:id="@+id/kursi_detail"
                            android:text="8 kursi banuak "
                            android:fontFamily="@font/dmsans_medium"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linear_tahun"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:src="@drawable/ic_year"
                            android:layout_width="40dp"
                            android:layout_height="40dp"/>
                        <TextView
                            android:id="@+id/tahun_detail"
                            android:text="tahun2018"
                            android:fontFamily="@font/dmsans_medium"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l2"
                    android:weightSum="2"
                    android:layout_marginVertical="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/linear_gear"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:src="@drawable/ic_transmition"
                            android:layout_width="40dp"
                            android:layout_height="40dp"/>
                        <TextView
                            android:id="@+id/transmisi_detail"
                            android:text="Manual"
                            android:fontFamily="@font/dmsans_medium"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linear_plat"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:src="@drawable/ic_plat"
                            android:layout_width="40dp"
                            android:layout_height="40dp"/>
                        <TextView
                            android:id="@+id/plat_detail"
                            android:text="ba19asdiajsdi2"
                            android:fontFamily="@font/dmsans_medium"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginVertical="6dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/detail_nama_mobil"
                    android:text="Nama Mobil Disini"
                    android:fontFamily="@font/dmsans_bold"
                    android:textColor="@color/black"
                    android:textSize="26sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/detail_deskripsi_mobil"
                    android:text="@string/lorem"
                    android:fontFamily="@font/dmsans_regular"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>