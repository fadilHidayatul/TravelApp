<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginRegister.LoginActivity"
    android:weightSum="10"
    android:paddingHorizontal="24dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/l_judul"
        android:layout_weight="3.5"
        android:layout_marginBottom="6dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="Go With Travel"
            android:fontFamily="@font/dmsans_bold"
            android:textSize="32sp"
            android:layout_above="@id/t1"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/t1"
            android:text="harap login untuk lanjut ke aplikasi"
            android:fontFamily="@font/dmsans_regular"
            android:textSize="16sp"
            android:layout_alignParentBottom="true"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/l_input"
        android:layout_weight="3"
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/login_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            android:background="@drawable/ic_input"
            android:drawableEnd="@drawable/ic_username_detail"
            android:fontFamily="@font/dmsans_regular"
            android:hint="username"
            android:singleLine="true"
            android:paddingStart="18dp"
            android:paddingEnd="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black40" />
        <EditText
            android:id="@+id/login_password"
            android:layout_below="@id/login_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            android:background="@drawable/ic_input"
            android:drawableEnd="@drawable/ic_password"
            android:fontFamily="@font/dmsans_regular"
            android:hint="password"
            android:singleLine="true"
            android:inputType="textPassword"
            android:paddingStart="18dp"
            android:paddingEnd="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black40" />


        <RelativeLayout
            android:id="@+id/btn_login"
            android:background="@drawable/ic_button_log"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Login Akun"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/dmsans_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:gravity="center_vertical"
        android:id="@+id/l_button"
        android:layout_weight="3.7"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/t2"
            android:text="Belum punya akun?"
            android:fontFamily="@font/dmsans_regular"
            android:textSize="16sp"
            android:layout_marginBottom="6dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:onClick="goRegister"
            android:orientation="horizontal"
            android:layout_below="@id/t2"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="REGISTER"
                android:fontFamily="@font/dmsans_regular"
                android:textSize="18sp"
                android:textColor="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_arrow_right"
                android:layout_marginStart="6dp"
                android:layout_marginBottom="-1dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>